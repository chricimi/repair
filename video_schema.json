{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "VideoScriptParts",
  "type": "object",
  "properties": {
    "parts": {
      "type": "array",
      "minItems": 13,
      "maxItems": 13,
      "items": {
        "type": "object",
        "properties": {
          "id": { "type": "integer" },
          "text": { "type": "string" },
          "image_prompt": { "type": "string" }
        },
        "required": ["id", "text", "image_prompt"]
      }
    }
  },
  "required": ["parts"]
}
